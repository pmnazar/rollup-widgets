<tpl id="conversionDialog">
    <div class="conversionDialog crowdsourced-polls js-crow-responsive" style="position: absolute;">
        <a href="javascript:void(0);" title="" id="modalClose" class="x-act-vpoll x-all"></a>
    </div>
</tpl>

<tpl id="crowStepWrapper">
	<div class="crowdsource-wrapper"></div>
</tpl>

<tpl id="crowRegStep">
	<div class="step-authentication">
    	<div class="h1" style="color: <%= elementColor %>;"><%= $.i18n.prop('widget_default_crow_reg_tagline_text') %></div>
        <div class="text-line">
            <%= $.i18n.prop('widget_default_crow_reg_text') %>
        </div>
    	<form class="sh-c social-btn-container">
        	<div class="js-crowd-auth social-btn fb-b" data-soc="FBAuth"></div>
        	<div class="js-crowd-auth social-btn g-b" data-soc="GOAuth" data-gapiattached="true"></div>
            <div class="js-crowd-auth social-btn t-b" data-soc="TWAuth"></div>
            <div class="js-crowd-auth social-btn vk-b" data-soc="VKAuth"></div>
    	</form>
    	<div class="js-back-to-option-step back-link"><%= $.i18n.prop('widget_default_crow_back_to_polls_text') %></div>
	</div>
</tpl>

<tpl id="crowQuestionStep">
 <%
 	var tagline, 
 		placeholder;

 	if (!_.isUndefined(formData.crowdsource)) {
 		tagline = formData.crowdsource.tagline;
 	}

    if (widgetWidth <= 350) {
        placeholder = $.i18n.prop('widget_default_crow_type_your_question_text_small');
    }
    else {
        placeholder = $.i18n.prop('widget_default_crow_type_your_question_text_big');
    }

 %>
	<div class="step-question">
        <div class="w-t">
            <div>
                <span class="js-ask-title b-like" style="color: <%= elementColor %>; border: 1px solid <%= elementColor %>;">
                    <%= $.i18n.prop('widget_default_crow_ask_question_text') %>
                </span>
            </div>
        </div>
        <div class="w-tt">
            <%= $.i18n.prop('widget_default_crow_share_text') %>
        </div>
    	<form id="question-form" class="question-form">
        	<div class="d-t-c relative w-i"><div class="corner-box"></div><input type="text" class="js-required tagline-input" name="crowdsource.tagline" placeholder="<%= placeholder %>" value="<%= tagline %>"/>
            </div>
        	<input id="submit-question" type="submit" class="sbmt-coner d-t-c" style="background-color: <%= elementColor %>;" value="" />
    	</form>
        <div class="hands js-responsive-element"></div>
	</div>
</tpl>

<tpl id="crowOptionsStep">
 <%
 	var forPartner;

 	if (!_.isUndefined(formData.crowdsource.forPartner)) {
 		forPartner = formData.crowdsource.forPartner === true ? 'checked' : false
 	}
 %>
	<div class="step-options">
    	<div class="h1" style="color: <%= elementColor %>;">
            <%= $.i18n.prop('widget_default_crow_type_answer_text') %>
        </div>
        <p class="text-line"><%= $.i18n.prop('widget_default_crow_need_answer') %></p>
    	<form id="options-form">
        	<div class="quantity"> 
            	<div class="plus-minus">
                	<span class="plus js-change-count" data="inc-count">+</span> 
                	<span class="minus js-change-count" data="dec-count">&ndash;</span>
                    <div class="left">
                        <input value="<%= defaultPollCount %>" id="total_count" disabled type="text">
                        <%= $.i18n.prop('widget_default_crow_aswer_count_text') %>
                    </div>
                </div>
        	</div>
        	<div class="options-wrapper">
            	<% for (var i = 1; i <= defaultPollCount; i++) { %>
             		<input type="text" name="opinion[<%= i-1 %>]" class="tr-in js-poll-option js-required" 
             		<% if (!_.isUndefined(formData.list) && formData.list.length) { %>value="<%= formData.list[i-1]['answerLabel'] %>"<% } %> />
                <% } %>
        	</div>
            <div class="sent-to-editor relative">
            	<input type="checkbox" id="forPartner" name="crowdsource.forPartner" <%= forPartner %> />
            	<label for="forPartner"><span class="circle-area"></span><%= $.i18n.prop('widget_default_crow_for_pulisher_text') %></label>
        	</div>
        	<div class="btns-wrapper">
         	<input id="submit-poll-opinion" type="submit" class="js-submit-poll-opinion btn-style left" style="background-color: <%= elementColor %>;" value="<%= $.i18n.prop('widget_default_crow_publish_poll_text') %>"/>
         	<a href="javascript:void(0);" class="js-to-prev-link back-link"><%= $.i18n.prop('widget_default_crow_back_to_poll_text') %></a></div>
    	</form>
	</div>
</tpl>

<tpl id="crowSharingStep">
	<div class="step-sharing">
		<div class="h1" style="color: <%= elementColor %>;">
				<%= $.i18n.prop('widget_default_crow_your_poll_is_published_text') %>
		</div>
        <div class="text-line"><%= $.i18n.prop('widget_default_crow_poll_published') %></div>
        <div class="text-line-bold"><%= $.i18n.prop('widget_default_crow_share_with_friends_text') %></div>
		<div class="sh-c social-btn-container">
	   		<% if (showFBLike) { %><div class="js-fb-share-uniq social-btn fb-b"></div><% } %>
	   		<% if (showTwitterLike) { %><div class="js-tw-share-uniq social-btn t-b"></div><% } %>
            <% if (showGooglePlusLike) { %><div class="js-gplus-share-uniq social-btn g-b"></div><% } %>
            <% if (showLinkedInLike) { %><div class="js-linked-in-share-uniq social-btn li-b"></div><% } %>
	   		<% if (showVkontakteSharing) { %><div class="js-vk-share-uniq social-btn vk-b"></div><% } %>
		</div>
		<div class="btns-wrapper">
			<input type="submit" class="back-link create-another js-create-new-poll" value="<%= $.i18n.prop('widget_default_crow_create_new_poll_text') %>"/> 
			<a href="javascript:void(0);" class="back-link js-show-my-poll hide"><%= $.i18n.prop('widget_default_crow_back_to_poll_text') %></a>
		</div>
	</div>
</tpl>

<tpl id="validateErrors">
    <label class="<%= errorClassName %> error" for="<%= name %>"><%= errMsg %></label>
</tpl>