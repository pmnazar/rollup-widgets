<tpl id="conversionDialog">
    <div id="conversion" class="conversionDialog">
        <div class="js-close-conversion close-actions-for-voted-poll-btn modalClose dialogCloser">Ã—</div>
        <div class="conversionDialogTable crowdsource-wrapper thanks-block">
            <div class="conversionDialogCell">
                <h2 class="conversionDialogTitle"><%= $.i18n.prop('widget.conversion.congratulations') %></h2>

                <p class="earned-points">
                    <%= $.i18n.prop('widget.conversion.you_earned') %> <span><%= countOfUserScore %>
                        <span><%= $.i18n.prop('widget.conversion.points') %></span></span>
                </p>

                <div class="conversionDialogMessage">
                    <div class="usr-link">
                        <% if (isMember) { %>
                            <p><%= $.i18n.prop('widget.conversion.want_to_convert') %></p>
                            <a href="<%= config.NEW_B2C_DOMAIN %>my-account/dashboard" target="_blank">
                                <%= $.i18n.prop('widget.conversion.check_dashboard') %>
                            </a>
                        <% } else { %>
                            <p><%= $.i18n.prop('widget.conversion.earn_and_convert') %></p>
                            <a href="<%= config.NEW_B2C_DOMAIN %>sign-up" target="_blank">
                                <%= $.i18n.prop('widget.conversion.create_account') %>
                            </a>
                        <% } %>
                    </div>
                    <a class="hte" href="<%= config.NEW_B2C_DOMAIN %>how-to-earn" target="_blank">
                        <%= $.i18n.prop('widget.conversion.how_to_earn') %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</tpl>